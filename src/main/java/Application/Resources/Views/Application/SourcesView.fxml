<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5.0" stylesheets="@../../Assets/Styles/Application/Sources.css" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controllers.Application.SourcesController">
    <children>
      <HBox alignment="CENTER">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="%tabs.sources.except_domains" />
                  <TextArea id="excepts" fx:id="excepts" prefHeight="191.0" prefWidth="399.0" />
               </children>
               <HBox.margin>
                  <Insets bottom="15.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="25.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="%tabs.sources.urls" />
                  <TextArea id="sources" fx:id="sources" prefHeight="191.0" prefWidth="399.0" />
                  <Label text="%tabs.sources.tip_template" />
                <Button id="save" mnemonicParsing="false" onAction="#save" text="%tabs.sources.save" />
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="%tabs.sources.extrude_links_from_text" />
                  <TextArea id="text" fx:id="text" prefHeight="191.0" prefWidth="267.0" />
                  <Label text="%tabs.sources.tip_extrude" />
               </children>
            </VBox>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>
